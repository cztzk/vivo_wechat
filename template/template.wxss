/* 产品列表 */

.product_list .product_item {
  height: 470rpx;
  background: white;
  width: 375rpx;
  box-sizing: border-box;
  border-right: 1px solid #f4f4f4;
  border-top: 1px solid #f4f4f4;
}

.product_list .product_item .product_img {
  width: 375rpx;
  background: white;
}

.product_list .product_item .product_img image {
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 20rpx auto 0;
}

.product_list .product_item .price {
  font-size: 30rpx;
  color: red;
  margin: auto;
  text-align: center;
}

.product_list .product_item .name {
  width: 80%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: auto;
  font-size: 26rpx;
  font-weight: 800;
  text-align: center;
}

.product_list .product_item .nametwo {
  height: 40rpx;
  font-size: 20rpx;
  text-align: center;
}

/* 新闻列表 */

.news_list {
  background: #fff;
}

.news_list .news_item {
  padding: 40rpx 20rpx 40rpx;
  border-bottom: 1px solid #999;
}
.news_list .news_item:last-child{
  border-bottom:  none;
}
.news_list .news_item .navigator-hover{
  background: #fff;
}

.news_list .news_item .news_title {
  color: #505b63;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.news_list .news_item .news_img image {
  width: 100%;
  height: 310rpx;
  display: block;
  border-radius: 10rpx;
}

.news_list .news_item .news_des {
  margin: auto;
  line-height: 50rpx;
  padding: 20rpx 0;
  color: #696969;
  text-align: justify;
  font-size: 24rpx;
}

.news_list .news_item .news_date {
  font-size: 24rpx;
  color: #696969;
}
