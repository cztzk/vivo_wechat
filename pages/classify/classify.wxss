/* pages/classify/classify.wxss */

.classify_left {
  overflow: scroll;
  flex: 1;
  height: 100%;
  background: #fff;
  border-right: 1px solid #999;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 25%;
  z-index: 10;
}

.classify_left view {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #999;
  box-sizing: border-box;
}

.classify_left view.active {
  border-left: 2px solid #199cfe;
  color: #199cfe;
}

.classify_right {
  flex: 3;
  height: 100%;
  background: #fff;
  overflow: scroll;
  position: absolute;
  left: 25%;
  top: 0;
  right: 0;
  bottom: 0;
  width: 75%;
}

.classify_title {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
}

.classify_cont_item {
  width: 33.3%;
  text-align: center;
  padding: 30rpx 0;
}

.classify_cont_item .class_img image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  display: block;
}

.class_name {
  font-size: 24rpx;
}
